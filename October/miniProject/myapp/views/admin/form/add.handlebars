  <body>

    <form method="POST">
      <div class="card card-success">
        <div class="card-header">
          <h3 class="card-title">Form Validator</h3>
        </div><br />

        <p style="background-color: green; color: white;">{{msg}}</p>
        <div class="card-body">
          <div class="form-group">
            <label>Name</label>

            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text"><i
                    class="far fa-square"
                  ></i></span>
              </div>
              <input
                type="text"
                name="name"
                class="form-control"
                placeholder="Enter name"
                required
              />
            </div>
            <!-- /.input group -->
            <div>
              {{#if myerrors}}
                <ul>
                  {{#each myerrors.name}}
                    <li style="color: red;">{{this}}</li>
                  {{/each}}
                </ul>
              {{/if}}
            </div>
          </div>
        </div>

        <!-- /.form group -->
        <div class="card-body">
          <div class="form-group">
            <label>Email</label>

            <div class="input-group">
