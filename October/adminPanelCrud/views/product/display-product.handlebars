</head>

<body class="hold-transition sidebar-mini">
        <section class="gallery_block">
        <div>
            <h2 style="margin-bottom: 1.3rem">Products Display</h2>
            <p>{{mydata.length}} Records Found </p>
        </div>
        <div class="gallery_view">
            {{#each mydata}}
            <div class="gallery">
                 <img src="/productUploads/{{product_Image}}" style="width: 100%;" />
                <div class="gallery_title">
                    <h4> <label>Product Name</label> {{product_name}}</h4>
                </div>
                <div class="gallery_desc">
                    <p> <label>Product Price : </label>
                      {{product_price}}
                    </p>
                     <p>  <label>Sub-Category Name : </label>
                     {{_subcategory.sub_category_name}}
                    </p>
                </div>
               <a href='/product/edit/{{_id}}' class="btn_gallery">Edit</a>
               <a href='/product/delete/{{_id}}' Onclick="ConfirmDelete()" class="btn_gallery">Delete</a> 
                {{!-- <a href='/subcategory/show/{{_id}}' class="btn_gallery">Show</a> --}}
            </div>
        </div>
          <div class="gallery_view">
            <div class="gallery">
                 <img src="/productUploads/{{product_Image}}" style="width: 100%;" />
                <div class="gallery_title">
                     <h4> <label>Product Name</label> {{product_name}}</h4>
                </div>
                <div class="gallery_desc">
                    <p> <label>Product Price : </label>
                      {{product_price}}
                    </p>
                     <p> <label>Sub-Category Name : </label>
                     {{_subcategory.sub_category_name}}
                    </p>
                </div>
                <a href='/product/edit/{{_id}}' class="btn_gallery">Edit</a>
               <a href='/product/delete/{{_id}}' Onclick="ConfirmDelete()" class="btn_gallery">Delete</a> 
                {{!-- <a href='/subcategory/show/{{_id}}'>Show</a> --}}
            </div>
        {{/each}}
        </div>
        <!--  -->
           </section>

<table id="example1" class="table table-bordered table-striped table-hover">
                            <thead>
                                <tr>
                                 <th>Product Name</th>
                                  <th>Product Image</th>
                                 <th>Sub-Category</th>
                                 <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <p>{{mydata.length}} Records Found </p>
                                {{#each mydata}}
                                     <tr>
                                      <td>{{product_name}}</td>
                                      <td><img src="/productUploads/{{product_Image}}" style="width: 100px;" /></td>
                                      <td>{{_subcategory.sub_category_name}}</td>
                                        <td>
                                          <a href='/product/edit/{{_id}}'>Edit</a> | 
                                          <a href='/product/delete/{{_id}}' Onclick="ConfirmDelete()">Delete</a> |
                                          <a href='/product/show/{{_id}}'>Show</a>
                                        </td>
                                     </tr>
                                {{/each}}
                            </tbody>
                            <tfoot>
                                <tr>
                                 <th>Product Name</th>
                                 <th>Product Image</th>
                                 <th>Sub-Category</th>
                                 <th>Action</th>
                                </tr>
                            </tfoot>
                        </table>

    <!-- jQuery -->
    <script src="../../plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- DataTables -->
    <script src="../../plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="../../plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
