    <script src="../../dist/js/demo.js"></script>
    <!-- page script -->
    <script>
        $(function() {
            $("#example1").DataTable({
                "responsive": true,
                "autoWidth": false,
            });
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
            });
        });
         function ConfirmDelete() {
            var x = confirm("Are you sure you want to delete?");
            if (x)
              return true;
            else
              return false;
        }
    </script>
</body>

</html>