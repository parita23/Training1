<h1> Product Display</h1>
<h3>Number of data is {{mydata.length}}</h3>

<table border="1">
    <tr>
        <th>Name</th>
        <th>Details</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Product Image</th>
        <th colspan="3">Action</th>
    </tr>
    {{#each mydata}}
    <tr>
        <td>{{{name}}}</td>
        <td>{{{details}}}</td>
        <td>{{{price}}}</td>
        <td>{{{qty}}}</td>
        <td><img src="/images/{{imgName}}" style="height: 150px; width :150px;" alt=""></td>
        <td><a href="/product/edit/{{_id}}">Edit</a></td>
        <td><a href="/product/delete/{{_id}}">Delete</a></td>
          <td><a href="/product/cart/{{_id}}">Add To cart</a></td>
    </tr>
    {{/each}}

</table>

