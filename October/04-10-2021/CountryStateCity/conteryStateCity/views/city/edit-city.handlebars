<html>
<body>
<a href="/city/add">Country Add</a> | <a href="/city/display">country Display</a>

    <form method="post">
        <h1>{{mycountry}}</h1>

        <h3>{{mystate}}</h3>
        

        <p>{{mycity.city_name}}</p>
        <h6> my city array {{mycity}}</h6>
        <h1>Edit Record</h1>
        <table>
            <tr>
                <td>State : </td>
                <td>
                <select name="_state">
                     {{#each mystate}}

                            <option value='{{_id}}'>{{state_name}}</option>
                           
                           {{/each}}
                    </select>
                    </td>
            </tr>
            <tr>
                <td>Country : </td>
                <td>
                <select name="_country">
                     {{#each mycountry}}
          

                            <option value='{{_id}}'>{{country_name}}</option>
                           
                           {{/each}}

                    </select>
                    </td>
            </tr>
             
            <tr>
                <td>City Name:</td>
                <td><input type="text" name="city_name" value={{mycity.city_name}}></td>
            </tr>
            
           
            <tr>
                <td><input type="submit"></td>
                <td><input type="reset"></td>
            </tr>
        </table>
    </form>
</body>
</html>